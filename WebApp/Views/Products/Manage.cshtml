@{
    ViewData["Title"] = "CONTACT US";
    ViewData["Page"] = "Home";
    ViewData["Function"] = "Contact";

    var products = productService.GetAllProductsAsync();
}



<partial name="/Views/Partials/_Breadcrumb.cshtml" />

<div class="container d-flex justify-content-center">
    <nav id="menu" class="menu-links">
        <a class="link" asp-controller="products" asp-action="register">Register</a>
        <a class="link" asp-controller="products" asp-action="edit">Edit</a>
        <a class="link" asp-controller="products" asp-action="deletet">Delete</a>
    </nav>
</div>



<div class="container justify-content-center">
    @if (products != null)
    {
        <!-- foreach(var product in await products) -->
        foreach (var product in await products)
        {
            <!-- collection-item start -->
            <a asp-controller="products" asp-action="details" asp-route-id="@product.Id" class="collection-item">
                <img src="@product.ImageUrl" alt="@product.Name">
                <div class="body">
                            <div class="title">@product.Name</div>
                    <div class="info">
                        <div class="price">@product.Price</div>
                        <i class="add-cart fa-regular fa-cart-plus"></i>
                    </div>
                </div>
            </a>
            <!-- collection-item end -->
        }
    }
</div>
