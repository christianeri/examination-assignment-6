@inject ShowcaseService showcaseService
@{
    var showcase = showcaseService.GetLatest();
}

@if(showcase != null)
{
    <section class="showcase">
        <div class="container">
            <div class="content">
                <div class="ingress">@showcase.Ingress</div>
                <div class="title">@showcase.Title</div>

                @if (!string.IsNullOrEmpty(@showcase.LinkButton?.Url) && !string.IsNullOrEmpty(@showcase.LinkButton?.Content))
                {
                    <a href="@showcase.LinkButton.Url" class="btn-theme">@showcase.LinkButton.Content</a>
                }

            </div>
            <div class="content-image">
                <img src="@showcase.ImageUrl" alt="@showcase.Title">
            </div>
        </div>
    </section>
}
