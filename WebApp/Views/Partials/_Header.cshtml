<header>
    <div class="container">
        <div class="logo"><img src="/img/logo.svg" alt="bmerketo"></div>
        <nav id="menu" class="menu-links">
            <a class="link" asp-controller="home" asp-action="index">HOME</a>
            <a class="link" asp-controller="products" asp-action="index">PRODUCTS</a>
            <a class="link" asp-controller="contact" asp-action="register">CONTACT</a>
        </nav>
        <nav class="menu-icons">
            <a class="link" href="#"><i class="fa-regular fa-search"></i></a>

            @if(signInManager.IsSignedIn(User) && User.IsInRole("admin")) {
                
                <a class="link" asp-controller="admin" asp-action="index">ADMIN</a>
            }
            
            <partial name="/views/partials/_UserState.cshtml" />
            
            <a class="link" href="#"><i class="fa-solid fa-cart-shopping"></i></a>
        </nav>
        <div class="toggle">
            <button class="btn-toggle btn-outline-white" data-option="toggle" data-target="#menu">
                <i id="icon" class="fa-regular fa-bars"></i>
            </button>
        </div>
    </div>
</header>
