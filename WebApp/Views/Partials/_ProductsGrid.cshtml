@model SelectedProductsViewModel

<div class="container">
    <div class="row pt-3
d-flex">
        @foreach (var product in Model.Products)
        {
            <div class="col-3">

                <a asp-controller="products" asp-action="details" asp-route-product="@product.ArticleNumber" class="collection-item">

                    @if (@product.ImageUrl != null)
                    {
                        <img src="/img/productimages/@product.ImageUrl" alt="@product.Name">
                    }
                    else
                    {
                        <img src="/img/placeholders/270x295.svg" alt="@product.Name">
                    }
                    <div class="body">
                        <div class="title"><span>@product.Brand </span>@product.Name</div>
                        <div class="category">@product.Category</div>
                        <div class="info">
                            <div class="price">SEK @product.Price</div>
                            <i class="add-cart fa-regular fa-cart-plus"></i>
                        </div>
                    </div>
                </a>

            </div>
        }
    </div>
</div>
