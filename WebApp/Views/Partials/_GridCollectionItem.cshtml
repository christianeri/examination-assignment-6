@model GridCollectionItemViewModel

    <!-- collection-item start -->
    <a asp-controller="products" asp-action="details" asp-route-id="@Model.Id" class="collection-item">
        <img src="/img/productimages/@Model.ImageUrl" alt="@Model.Title">
        <div class="body">
            <div class="title">@Model.Title</div>
            <div class="info">
                <div class="price">@Model.Price</div>
                <i class="add-cart fa-regular fa-cart-plus"></i>
            </div>
        </div>
    </a>
    <!-- collection-item end -->
